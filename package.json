{
  "name": "context-lens",
  "version": "0.1.0",
  "type": "module",
  "description": "Local HTTP proxy that intercepts LLM API calls and visualizes context windows",
  "main": "dist/server.js",
  "bin": {
    "context-lens": "./dist/cli.js"
  },
  "scripts": {
    "generate:types": "json2ts schema/lhar.schema.json src/lhar-types.generated.ts --unreachableDefinitions",
    "build": "npm run generate:types && tsc",
    "build:test": "npm run generate:types && tsc -p tsconfig.test.json",
    "start": "node dist/server.js",
    "test": "npm run build:test && node --test 'dist-test/test/**/*.test.js'",
    "dev": "tsc --watch",
    "postbuild": "chmod +x dist/cli.js",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "public/",
    "schema/",
    "mitm_addon.py",
    "screenshot-overview.png",
    "findings-screenshot.png",
    "diff.png",
    "overview-sidebar.png"
  ],
  "keywords": [
    "llm",
    "proxy",
    "context",
    "anthropic",
    "openai",
    "visualization"
  ],
  "author": "Lars de Ridder",
  "repository": {
    "type": "git",
    "url": "https://github.com/larsderidder/context-lens"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "json-schema-to-typescript": "^15.0.4",
    "typescript": "^5.9.3"
  }
}
