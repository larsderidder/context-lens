{
  "name": "context-lens",
  "version": "0.2.1",
  "type": "module",
  "description": "Local HTTP proxy that intercepts LLM API calls and visualizes context windows",
  "main": "dist/server.js",
  "bin": {
    "context-lens": "./dist/cli.js"
  },
  "scripts": {
    "generate:types": "json2ts schema/lhar.schema.json src/lhar-types.generated.ts --unreachableDefinitions",
    "generate:version": "node -e \"const v=JSON.parse(require('node:fs').readFileSync('package.json','utf8')).version;require('node:fs').writeFileSync('src/version.generated.ts','export const VERSION = '+JSON.stringify(v)+';\\n')\"",
    "build": "npm run generate:version && npm run generate:types && tsc",
    "clean:test": "node -e \"require('node:fs').rmSync('dist-test', { recursive: true, force: true })\"",
    "build:test": "npm run generate:version && npm run generate:types && npm run clean:test && tsc -p tsconfig.test.json",
    "start": "node dist/server.js",
    "test": "npm run build:test && node --test --experimental-test-isolation=none 'dist-test/test/**/*.test.js'",
    "dev": "tsc --watch",
    "postbuild": "chmod +x dist/cli.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "public/",
    "schema/",
    "mitm_addon.py",
    "screenshot-overview.png",
    "findings-screenshot.png",
    "diff.png",
    "overview-sidebar.png"
  ],
  "keywords": [
    "llm",
    "proxy",
    "context-window",
    "anthropic",
    "openai",
    "claude",
    "codex",
    "gemini",
    "aider",
    "token",
    "cost",
    "visualization",
    "debugging"
  ],
  "author": "Lars de Ridder",
  "repository": {
    "type": "git",
    "url": "https://github.com/larsderidder/context-lens"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.2",
    "json-schema-to-typescript": "^15.0.4",
    "typescript": "^5.9.3"
  }
}
